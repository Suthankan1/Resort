<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browseRoomsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/daysPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many days will you stay?"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/numDaysInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of days"
        android:inputType="number"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/selectFloorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Floor"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed" />

</LinearLayout>
